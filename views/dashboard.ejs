<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Index</title>
        
    </head>
    <body>
        <div class="addForm">
            URL: <input type="text" id="url"><br>
            Title: <input type="text" id="title"> <br>
            Notes: <input type="text" id="notes"> <br>
            Tags: <input type="text" id="tags"> <br>
            <button type="button" id="addButton">Add</button>
        </div>
        <h2>Loop</h2>
        
            <% posts.forEach(function(post){ %>
                <div class="linkBox">Title: <%= post.title %> <br>
                URL: <%= post.url %> <br>
                Notes: <%= post.notes %> <br>
                Tags: <%= post.tags %> <br>
                <p> <a href="/posts/<%= post._id %>">More</a> <!-- link directs to show route to view full post -->
                </p>
                <form action="/posts/<%= post._id %>?_method=DELETE" method="POST"> <!--used method override-->
                    <button>Delete</button>
                </form>
                </div> <br>
          <%  }); %>
        
        <script src="/scripts/post.js"></script>
    </body>
    
</html>